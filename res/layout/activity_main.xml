<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/rlSound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
   		android:layout_above="@+id/rlDrive"
   		android:paddingBottom="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sound"
            android:src="@drawable/nearby_btn_sound" />
        
     </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_above="@+id/rlSOS" >
       	    <ImageView
	            android:id="@+id/btn_drive"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/sound"
	            android:src="@drawable/nearby_btn_drive" />
     </RelativeLayout>
     <RelativeLayout
        android:id="@+id/rlOil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_above="@+id/rlSOS" >
	        <ImageView
	            android:id="@+id/btn_oil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/sound"
	             android:layout_alignParentRight="true"
	            android:src="@drawable/nearby_btn_oil" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlSOS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_above="@+id/rlClean"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sound"
            android:src="@drawable/nearby_btn_sos" />
        
     </RelativeLayout>
     
    <RelativeLayout
        android:id="@+id/rlClean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_above="@+id/rlClose" >
        
       	       <ImageView
	            android:id="@+id/btn_clean"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/sound"
	            android:src="@drawable/nearby_btn_clean" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlFix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_above="@+id/rlClose" >	       
	        <ImageView
	            android:id="@+id/btn_fix"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/sound"
	            android:layout_alignParentRight="true"
	            android:src="@drawable/nearby_btn_fix" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sound"
            android:src="@drawable/nearby_btn_close" />
        
     </RelativeLayout>


</RelativeLayout>